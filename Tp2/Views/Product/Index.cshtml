@model IEnumerable<Tp2.Models.Product>
@{
    ViewData["Title"] = "Liste des Produits";
}

<div class="container-fluid">
    <!-- En-tête simple -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 text-primary">
                        <i class="fas fa-boxes me-2"></i>Liste des Produits
                    </h1>
                </div>

            </div>
        </div>
    </div>

    <!-- Grille des produits -->
    <div class="row" id="productsGrid">
        @foreach (var product in Model)
        {
            var photoPath = "~/images/" + (product.Image ?? "noimage.jpg");
            var stockStatus = product.QteStock == 0 ? "out-of-stock" : product.QteStock < 10 ? "low-stock" : "in-stock";
            var stockBadgeClass = product.QteStock == 0 ? "bg-danger" : product.QteStock < 10 ? "bg-warning" : "bg-success";
            var stockBadgeText = product.QteStock == 0 ? "Rupture" : product.QteStock < 10 ? "Stock faible" : "En stock";

            <div class="col-xl-4 col-lg-6 mb-4 product-card"
                 data-name="@product.Name.ToLower()"
                 data-category="@product.Category?.CategoryName?.ToLower()"
                 data-stock="@stockStatus"
                 data-product-id="@product.ProductId"
                 data-product-name="@product.Name">
                <div class="card product-card h-100 shadow-sm border-0">
                    <div class="card-img-container position-relative">
                        <img class="card-img-top product-image" src="@photoPath" asp-append-version="true"
                             alt="@product.Name" style="height: 250px; object-fit: cover;">
                        <span class="position-absolute top-0 end-0 m-2 badge @stockBadgeClass">
                            @stockBadgeText
                        </span>
                        @if (product.QteStock < 10 && product.QteStock > 0)
                        {
                            <div class="position-absolute top-0 start-0 w-100">
                                <div class="progress" style="height: 4px;">
                                    <div class="progress-bar bg-warning"
                                         style="width: @((product.QteStock / 10.0) * 100)%"></div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="mb-2">
                            <h5 class="card-title text-primary fw-bold">@product.Name</h5>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="h4 text-success mb-0">@product.Price.ToString("N2") TND</span>
                                <span class="badge bg-light text-dark">
                                    <i class="fas fa-box me-1"></i>@product.QteStock unités
                                </span>
                            </div>
                            <div class="category-badge mb-2">
                                <span class="badge bg-primary">
                                    <i class="fas fa-tag me-1"></i>@product.Category?.CategoryName
                                </span>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"
                                   class="btn btn-outline-primary btn-sm me-md-2"
                                   data-bs-toggle="tooltip" title="Voir les détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.ProductId"
                                   class="btn btn-outline-warning btn-sm me-md-2"
                                   data-bs-toggle="tooltip" title="Modifier le produit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button" class="btn btn-outline-danger btn-sm delete-btn"
                                        data-bs-toggle="tooltip" title="Supprimer le produit"
                                        data-product-id="@product.ProductId"
                                        data-product-name="@product.Name">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Message si aucun produit -->
    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow border-0">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                        <h3 class="text-muted">Aucun produit trouvé</h3>
                        <p class="text-muted">Commencez par ajouter votre premier produit</p>
                        <a asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus-circle me-2"></i>Ajouter un produit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Styles personnalisés -->
<style>
    .product-card {
        transition: all 0.3s ease;
        border-radius: 15px;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .card-img-container {
        overflow: hidden;
        border-radius: 15px 15px 0 0;
    }

    .product-image {
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .badge {
        font-size: 0.7em;
    }

    .card {
        border-radius: 15px;
    }

    .btn {
        border-radius: 10px;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialiser les tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Gestion de la suppression avec confirmation
            $('.delete-btn').on('click', function() {
                const productId = $(this).data('product-id');
                const productName = $(this).data('product-name');

                if (confirm(`Êtes-vous sûr de vouloir supprimer le produit "${productName}" ?`)) {
                    window.location.href = `@Url.Action("Delete", "Product")/${productId}`;
                }
            });
        });
    </script>
}