<style>
    /* Reset des marges pour le plein écran */
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Hero Section - Plein écran */
    .hero-banner-full {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0;
        width: 100vw;
        margin: 0;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
    }

    .min-vh-100 {
        min-height: 100vh;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        opacity: 0.9;
        line-height: 1.6;
    }

    .hero-stats .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 1rem;
        opacity: 0.8;
        margin: 0;
    }

    /* Sections pleine largeur */
    .categories-section-full,
    .featured-section-full,
    .benefits-section-full {
        width: 100vw;
        margin-left: -50vw;
        left: 50%;
        right: 50%;
        position: relative;
        margin-right: -50vw;
    }

    /* Sections */
    .section-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .section-subtitle {
        font-size: 1.3rem;
        color: #6c757d;
        margin-bottom: 3rem;
    }

    /* Category Cards */
    .category-card {
        padding: 3rem 2rem;
        border-radius: 20px;
        background: white;
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
        margin: 0.5rem;
    }

        .category-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }

    .category-name {
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 1.3rem;
    }

    .category-count {
        font-size: 1rem;
    }

    /* Product Cards */
    .product-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        height: 100%;
        margin: 0.5rem;
    }

        .product-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        }

    .product-image {
        position: relative;
        overflow: hidden;
        height: 280px;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    .product-card:hover .product-image img {
        transform: scale(1.1);
    }

    .product-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .product-info {
        padding: 2rem;
    }

    .product-name {
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 1.3rem;
    }

    .product-price {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 1rem 0;
    }

    .current-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: #28a745;
    }

    .original-price {
        font-size: 1.2rem;
        text-decoration: line-through;
        color: #6c757d;
    }

    .product-rating {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .rating-count {
        font-size: 1rem;
        color: #6c757d;
        margin-left: 0.5rem;
    }

    /* Benefits Section */
    .benefit-item {
        padding: 3rem 2rem;
    }

        .benefit-item h4 {
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        .benefit-item p {
            font-size: 1.1rem;
            line-height: 1.6;
        }

    .btn {
        border-radius: 15px;
        transition: all 0.3s ease;
        padding: 1rem 2rem;
        font-size: 1.1rem;
    }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .container-fluid.px-5 {
            padding-left: 1rem !important;
            padding-right: 1rem !important;
        }
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Animation au scroll
            $(window).scroll(function() {
                $('.category-card, .product-card, .benefit-item').each(function() {
                    var position = $(this).offset().top;
                    var scrollPosition = $(window).scrollTop() + $(window).height();

                    if (position < scrollPosition - 50) {
                        $(this).addClass('animate__animated animate__fadeInUp');
                    }
                });
            });

            // Déclencher l'animation au chargement
            setTimeout(function() {
                $('.hero-content').addClass('animate__animated animate__fadeInLeft');
                $('.hero-image').addClass('animate__animated animate__fadeInRight');
            }, 300);

            // Smooth scroll pour les ancres
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if( target.length ) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top
                    }, 1000);
                }
            });
        });
    </script>
}