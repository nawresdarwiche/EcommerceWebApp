@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewData["Title"] = "Supprimer le Rôle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Confirmation de Suppression
                        </h4>
                        <a asp-action="ListRoles" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Retour
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <!-- Avertissement important -->
                    <div class="alert alert-warning border-warning">
                        <div class="d-flex">
                            <i class="fas fa-exclamation-circle fa-2x me-3 text-warning"></i>
                            <div>
                                <h5 class="alert-heading">Attention ! Action critique</h5>
                                <p class="mb-0">Vous êtes sur le point de supprimer définitivement un rôle. Cette action affectera tous les utilisateurs associés à ce rôle.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Détails du rôle -->
                    <div class="role-info-card p-4 border rounded bg-light">
                        <h5 class="text-danger mb-4">
                            <i class="fas fa-users-cog me-2"></i>Détails du Rôle à Supprimer
                        </h5>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="fw-bold text-muted">Nom du Rôle</label>
                                <div class="fs-4 text-dark">@Model.Name</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="fw-bold text-muted">ID du Rôle</label>
                                <div class="text-muted font-monospace">@Model.Id</div>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="ListRoles" class="btn btn-outline-secondary btn-lg me-md-2">
                                    <i class="fas fa-times me-2"></i>Annuler
                                </a>
                                <form asp-action="DeleteRole" asp-controller="Admin" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-lg" id="confirmDeleteBtn">
                                        <i class="fas fa-check me-2"></i>Confirmer la suppression
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>